{
  "extends": "@vue/tsconfig/tsconfig.dom.json",

  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/types/user.ts" // Menambahkan file user.ts secara eksplisit
  ],

  "exclude": ["src/**/__tests__/*"]
}
